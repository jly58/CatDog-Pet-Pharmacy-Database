{% include 'navbar.html' %}
<h1>Browse Owners</h1>

<body id="addDelLink">
  <table>
    <table border="1" cellpadding="5">
    <thead>
    <tr>
        <!-- Iterate through each key in the first entry to get the
        column name -->
        {% for key in Owners[0].keys() %}

        <!-- Create a <th> tag with the key inside of it, this will be
        our header row -->
        <th>{{ key }}</th>

        <!-- End of this for loop -->
        {% endfor %}

    </tr>
    <tbody>

    <!-- Now, iterate through every owner in Owners -->
    {% for owner in Owners %}
    <tr>
        <!-- Then iterate through every key in the current veterinarian dictionary -->
        {% for key in owner.keys() %}

        <!-- Create a <td> element with the value of that key in it -->
        <td>{{owner[key]}}</td>
        {% endfor %}
        <td><button class="btn">Delete</button></td>
    </tr>
    {% endfor %}
    </table>

<a href="/add_owner" class="navPage">Add an owner</a>
</body>

<p>&nbsp;</p>
<div id="update">
  <form id="updateOwner">
      <legend><strong>Update Owner</strong></legend>
          <fieldset class="fields">
          <p>Please enter the following information of the owner to be updated</p>
            <label> First Name: </label> <input type="text" value="John" name="fname" size="45">
            <label> Last Name: </label> <input type="text" value="Doe" name="lname" size="45">
            <label> Address: </label> <input type="text" name="address" value="1234 abcd, efg">
            <label> Phone Number: </label> <input type="number" name="phone number" min="0" value="2132132134">
    </fieldset>
    <input class="btn" type="submit" id="UpdateOwner" value="Update Owner">
          <input class="btn" type="button" value="Cancel" >
  </form> 
</div><!-- update -->
